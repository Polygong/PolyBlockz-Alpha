public static void setupEnchantedRecepies()
        {
                ItemStack FeatherFall8_CobbleBoots = new ItemStack(Item_Helper.CobbleBoots);
                FeatherFall8_CobbleBoots.addEnchantment(Enchantment.featherFalling, 8);
                GameRegistry.addShapelessRecipe(FeatherFall8_CobbleBoots, new Object[]
                                {
                                
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item_Helper.CobbleBoots)
                                }
                );
                
                ItemStack FeatherFall6_CobbleBoots = new ItemStack(Item_Helper.CobbleBoots);
                FeatherFall6_CobbleBoots.addEnchantment(Enchantment.featherFalling, 6);
                GameRegistry.addShapelessRecipe(FeatherFall6_CobbleBoots, new Object[]
                                {
                                
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item_Helper.CobbleBoots)
                                }
                );

                
                ItemStack FeatherFall4_CobbleBoots = new ItemStack(Item_Helper.CobbleBoots);
                FeatherFall4_CobbleBoots.addEnchantment(Enchantment.featherFalling, 4);
                GameRegistry.addShapelessRecipe(FeatherFall4_CobbleBoots, new Object[]
                                {
                                
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item_Helper.CobbleBoots)
                                }
                );

                
                ItemStack FeatherFall2_CobbleBoots = new ItemStack(Item_Helper.CobbleBoots);
                FeatherFall2_CobbleBoots.addEnchantment(Enchantment.featherFalling, 2);
                GameRegistry.addShapelessRecipe(FeatherFall2_CobbleBoots, new Object[]
                                {
                                
                                new ItemStack(Item.feather),
                                new ItemStack(Item.feather),
                                new ItemStack(Item_Helper.CobbleBoots)
                                }
                );
                
                
                
